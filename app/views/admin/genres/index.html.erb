<div class='container'>
  <div class='row'>
    <div class='col-md-4 offset-md-1'>
      <p class="mt-4 fs-2 bg-light col- text-center">ジャンル一覧</p>
        <%= form_with model: @genre, url:admin_genres_path,remote:true do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: 'form-control name' %>
        </div>
          <%= f.submit "新規登録" ,class: 'btn btn-success'%>
        <% end %>
    </div>
  </div>
</div>
<p></p>
<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <%= render 'index', genres: @genres, genre: @genre %>
    </div>
  </div>
</div>
