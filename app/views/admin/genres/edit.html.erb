<div class='container'>
  <div class='row'>
    <div class='col-md-4 offset-md-1'>
      <h3>ジャンル編集</h3>
      <%= form_with model:@genre,url:admin_genre_path(@genre.id),local:true do |f| %>
      <div>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: 'form-control name' %>
      </div>
        <%= f.submit "変更を保存" ,class: 'btn btn-success'%>
        <%= link_to "削除", admin_genre_path(@genre), method: :delete %>
      <% end %>
    </div>
  </div>
</div>