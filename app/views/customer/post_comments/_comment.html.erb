<table>
<% comments.each do |post_comment| %>
  <tr>
      <td>
      <%= link_to customer_customer_path(post_comment.customer.id), class: "commentCustomerLink" do %>
          <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 800, 500, fallback: "no_image.jpg") %>
          <%= post_comment.customer.name %>
      <% end %>
      </td>
      <% if post_comment.customer_id == current_customer.id %>
          <td class="commentContent"><%= post_comment.comment %>
              <%= link_to 'Destroy', customer_todolist_post_comment_path(post_comment.list_id, post_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_customer_todolist_post_comment_#{@list.id}"%>
          </td>
      <% end %>
  </tr>
<% end %>
</table>