<table class='table'>
  <tr><%= attachment_image_tag(customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= customer.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to customer.followings.count, customer_customer_followings_path(customer.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to customer.followers.count, customer_customer_followers_path(customer.id)%></th>
  </tr>
</table>

<div class='row'>
  <% if customer == current_customer %>
     <%= link_to '',edit_customer_customer_path(customer),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{customer.id}" %>
  <% else %>
    <%= render "relationships/follow", customer: customer %>
  <% end %>

</div>