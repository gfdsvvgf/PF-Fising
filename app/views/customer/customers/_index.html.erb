<!--index部分テンプレート-->
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= attachment_image_tag(customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= customer.name %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td><%= render "customer/relationships/follow", customer: customer %></td>
        <td><%= link_to 'Show', customer_customers_path(customer), class: "customer_#{customer.id}" %></td>
　  　</tr>
    <% end %>
  </tbody>
</table>