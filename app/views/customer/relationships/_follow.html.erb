<% unless current_customer == customer %>
  <% if current_customer.following?(customer) %>
    <%= form_with(url: customer_customer_relationship_path(customer), method: :delete, local:true ) do |f| %>
      <%= f.hidden_field :follow_id, :value =>customer.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(url: customer_customer_relationships_path(customer) , local:true ) do |f| %>
      <%= f.hidden_field :follow_id, :value =>customer.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>