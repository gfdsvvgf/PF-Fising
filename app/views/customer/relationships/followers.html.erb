<h2>Follower Users</h2>
<table class='table'>
<% if @customer.followers.exists? %>
  <thead>
    <tr>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customer.followers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td><%= link_to 'Show', customer_customer_path(customer), class: "customer_customer_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
    </table>
<% else %>
      <p>ユーザーはいません</p>
<% end %>